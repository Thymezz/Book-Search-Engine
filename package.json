{
  "name": "googlebooks-app",
  "version": "1.0.0",
  "description": "Google Books Search Application",
  "main": "server/src/server.ts",
  "scripts": {
  "start": "node dist/server.js",
  "dev": "nodemon --watch server/src --ext ts,json --exec ts-node server/src/server.ts",
  "build": "tsc",
  "heroku-postbuild": "npm install --prefix client && npm run build --prefix client",
  "render-build": "npm run build && npm install --prefix client && npm run build --prefix client",
  "preinstall": "npm install --include=dev",
  "prepare": "npm install --save-dev @types/node @types/react @types/react-dom"

  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "overrides": {
    "@types/express": "4.17.21"
  },
  "resolutions": {
    "@types/express": "4.17.21"
  }
}
