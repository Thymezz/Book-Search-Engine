{
  "name": "googlebooks-app",
  "version": "1.0.0",
  "description": "Google Books Search Application",
  "main": "server/src/server.ts",
  "scripts": {
  "start": "node dist/server.js",
  "dev": "nodemon --watch server/src --ext ts,json --exec ts-node server/src/server.ts",
  "build": "tsc --build",
  "render-build": "npm run build && npm install --prefix client --legacy-peer-deps && npm run build --prefix client && npm run build --prefix server",
  "postinstall": "npm install --include=dev @types/node @types/react @types/react-dom",
  "prepare": "npm install --save-dev @types/node @types/react @types/react-dom"
  },

  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@apollo/server": "^4.11.3",
    "apollo-server-express": "^3.6.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "graphql": "^16.10.0"
},

  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "@types/express": "4.17.21"
  },
  "resolutions": {
    "@types/express": "4.17.21"
  }
}
